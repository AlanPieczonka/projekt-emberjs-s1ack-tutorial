{
  "rules": {
    ".read": true,
    ".write": "auth.uid != null",  
      "messages": {
        "$messageId": {
          ".write": "!data.exists() && newData.exists() || auth.uid == data.child('author').val()"
        },
      },
    "users": {
      "$userId": {
    		".write": "auth.uid == $userId"       
      }
    }
  }
}