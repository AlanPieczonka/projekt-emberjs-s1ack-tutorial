<div class="app-layout">
  <div class="teams box">
    {{#if session.isAuthenticated}}
      {{#if session.currentUser.photoUrl}} 
        <img {{action "signOut"}} class="br-100" alt={{session.currentUser.name}} src={{session.currentUser.photoUrl}} >
      {{else}}
        <img {{action "signOut"}} class="br-100" src="https://placehold.it/50x50.jpg/ffffff/000?text=Me" >
      {{/if}}
    {{else}}
      <button {{action "signIn"}}>Sign in</button>
    {{/if}}
    <h4>Teams</h4>
    <img class="w2 h2 w3-ns h3-ns mb2" alt='Selleo' src="/images/teams/selleo.png">
    <img class="h2 h3-ns" alt='Mikstura.IT' src="/images/teams/miksturait.png">
  </div>
  <div class="channels box">
    <h4>Channels</h4>
    <ul class="tl">
      {{#each model as |channel|}}
        {{#link-to 'channel' channel}}
          <li class="flex pb2">{{channel.name}}</li>
        {{/link-to}}
      {{/each}}
    </ul>
  </div>
  {{outlet}}
</div>