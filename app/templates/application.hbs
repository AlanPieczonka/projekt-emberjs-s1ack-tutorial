<div class="app-layout">
  <div class="teams box">
    <h4>Teams</h4>
    <img class="w2 h2 w3-ns h3-ns mb2" alt='Selleo' src="/images/teams/selleo.png">
    <img class="h2 h3-ns" alt='Mikstura.IT' src="/images/teams/miksturait.png">
  </div>
  <div class="channels box">
    <h4>Channels</h4>
    <ul class="tl">
      <li class="flex pb2">#coderdojo</li>
      <li class="flex pb2">#emberjs</li>
      <li class="flex pb2">#emberbbmeetup</li>
      <li class="flex pb2">#general</li>
      <li class="flex pb2">#miksturaitmeetup</li>
      <li class="flex pb2">#random</li>
      <li class="flex pb2">#reactjs</li>
    </ul>
  </div>
  <div class="header box">#coderdojo</div>
  <div class="messages box">
    <ul class="message-list tl">
      {{#each messages as |msg|}}
        <li class="flex">
          <img class="w1 h1 w2-ns h2-ns" alt= {{msg.author.nick}} src= {{msg.author.avatarUrl}}>
          <div class="pl3 flex-auto">
            <span class="f6 db black">
              <strong>{{msg.author.nick}}</strong> [{{msg.time}}]</span>
            <span class="f6 db black-70">{{msg.content}}</span>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="input box">
    <input type="text" placeholder="Message <channel name>">
  </div>
</div>