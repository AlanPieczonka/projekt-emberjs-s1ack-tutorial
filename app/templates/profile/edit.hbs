{{#x-form as |f|}}
  {{f.input user.nick label="Nick"}}
  {{f.input user.whatIDo label="What I Do"}}
  {{f.input user.status label="Status"}}
  {{f.input user.since label="Since"}}
  {{f.input user.street label="Street"}}
  {{f.input user.city label="City"}}
  {{f.input user.secondaryEmail label="Secondary Email"}}
  {{f.select user.timezone label="Timezone" options=options}}
  {{f.date  user.birthday label="Birthday"}}
  {{#f.buttons}}
    {{f.button "Cancel" onClick=(action 'cancel')}}
    {{f.button "Save changes" onClick=(action 'save')}}
  {{/f.buttons}} 
{{/x-form}}
    
